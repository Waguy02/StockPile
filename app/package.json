  "version": "0.1.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on tcp:5173 && npm run build:electron && electron .\"",
    "electron:build": "npm run build && npm run build:electron && electron-builder",
    "sync:android": "npx cap sync android",
    "build:android": "npm run build && npx cap sync android",
    "build:apk": "npm run build:android && npx cap build android"
  },
